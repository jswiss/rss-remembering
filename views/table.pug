extends layout

block content
  .inner
    h2= title

    .names-table
    label(for='search') Search
      input.search(name='search' placeholder='search by name, location, etc.')
    button.sort(data-sort='name') Sort by name

    - var rows = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i'];
    - var columns = ['0', '1', '2', '3', '4', '5', '6', '7', '8'];

    table
        tbody
            each column in columns
              tr(id="columns") #{column}
                each row in rows
                  td(id="square-" + row + "-" + column) #{row}